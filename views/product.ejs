<%- include('partials/header', {user: user}); %>
    <div class="content row">

       <div class="tab row">
         <div class="col-6">
            <img class="product-image" src="<%=product.img%>" alt="product-image">
        </div>
         <div class="col-6">
            <h1><%=product.name%></h1>
            <p><%=product.desc%></p>
            <span class="price"><%=product.price.toFixed(2)%> €</span>

            <form action="/buyproduct/<%=product._id%>" method="post">
               <button type="submit" class="btn btn-primary"><i class="fa-solid fa-cart-shopping"></i> Kúpiť</button>
            </form>
            <!-- <a href="#" class="btn btn-primary"><i class="fa-solid fa-cart-shopping"></i> Kúpiť</a> -->
            
            <% if(typeof user !== 'undefined') { %>
               <% if(user.isAdmin) { %>
                  <form action="/deleteproduct/<%=product._id%>" method="post">
                     <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Vymazať</button>
                     <!-- <a href="#" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Vymazať</a> -->
                  </form>  
               <% } %> 
           <% } %>
         </div>
       </div>

    </div>
        

    

<%- include('partials/footer'); %>
